<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">





    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <!--自定义属性-->
        <com.cbb.myapplication.timelyAnimation.DoubleNumberView
            android:id="@+id/hour_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/black"
            android:textSize="30dp"/>

        <com.cbb.myapplication.timelyAnimation.DoubleNumberView
            android:id="@+id/minute_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"/>

        <com.cbb.myapplication.timelyAnimation.SecondsNumberView
            android:id="@+id/seconds_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/black"/>

    </LinearLayout>

</RelativeLayout>
