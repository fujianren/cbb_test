            android:onClick="disPlayButterknife"
            android:text="butterknife的展示，有毒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:onClick="goDialogDemo"
            android:text="dialog加载仿58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="goViewDemo"
            android:text="view加载仿58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="goMapDemo"
            android:text="百度地图呆萌"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="goTaijiDemo"
            android:text="旋转太极呆萌"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

