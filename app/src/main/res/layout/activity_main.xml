            android:onClick="goCobwebsDemo"
            android:text="蜘蛛网小呆萌"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="goQQListDemo"
            android:text="仿QQ列表滑动删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:onClick="goCircleMenuDemo"
            android:text="圆环滚动菜单小呆萌"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:onClick="goLargeImageDemo"
            android:text="大图拖动浏览小呆萌"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
